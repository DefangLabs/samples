{
  "$schema": "https://platformatic.dev/schemas/v1.52.2/runtime",
  "entrypoint": "service1",
  "allowCycles": false,
  "hotReload": true,
  "autoload": {
    "path": "services",
    "exclude": ["docs"]
  },
  "server": {
    "hostname": "0.0.0.0",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "managementApi": "{PLT_MANAGEMENT_API}"
}
